<%- include('partials/header') %>
<body background="" style="background-size: cover; background-color: black;">

  <nav style="background-color: transparent; display: flex; justify-content: flex-end; padding: 20px;">
    <a href="/catelog" role="button" class="nav-link magnify1" style="color: white; padding: 20px 25px; text-decoration: none; transition: background-color 0.3s; font-size: 18px;">Catalog</a>
    <a href="/logout" role="button" class="nav-link magnify1" style="color: white; padding: 20px 25px; text-decoration: none; transition: background-color 0.3s; font-size: 18px;">Logout</a>
  </nav>

  <style>
    .cart-container {
      margin-top: 50px; /* Add some space below "Your Cart" */
    }

    .cart-items {
      font-size: 24px; /* Larger text size */
      color: rgb(207, 204, 204);
      text-align: center;
      margin: 10px 0;
    }

    .cart-items .details {
      display: inline-block;
      padding-right: 30px; /* Space between product name and subtotal */
    }

    .cart-items .subtotal {
      display: inline-block;
      padding-left: 30px; /* Space after quantity and price */
    }

    .cart-total {
      font-size: 32px; /* Even larger for Total */
      color: gray;
      text-align: center;
      margin-top: 30px;
    }

    .total-value {
      font-size: 32px; /* Same size as total */
      color: rgb(207, 204, 204);
      text-align: center;
    }

    .nav-link {
      transition: background-color 0.3s, color 0.3s;
    }

    .nav-link:hover {
      background-color: rgba(69, 208, 240, 0.322);
      color: black;
    }

    .magnify1 {
      transition: transform 0.3s ease;
      cursor: pointer;
      transform-origin: center center;
    }

    .magnify1:hover {
      transform: scale(1.2);
    }
  </style>

  <h1 style="color: gray; text-align: center;">Your Cart</h1>

  <div class="cart-container">
    <% if (allCartItems.length > 0) { %>
      <div>
        <% allCartItems.forEach(cartItem => { %>
          <% const subtotal = cartItem.price * cartItem.amount; %>
          <p class="cart-items">
            <span class="details"><%= cartItem.name %> | Rs.<%= cartItem.price.toFixed(2) %> x <%= cartItem.amount %></span>
            <span class="subtotal">Rs.<%= subtotal.toFixed(2) %></span>
          </p>
          <hr style="border-color: white;">
        <% }); %>
      </div>

      <h2 class="cart-total">Total</h2>
      <p class="total-value">Rs.<%= grandTotal.toFixed(2) %></p>
    <% } else { %>
      <p style="color: rgb(207, 204, 204); text-align: center;">Your cart is empty.</p>
    <% } %>
  </div>

  <h1 style="color: gray; text-align: center;">Thank You!</h1>
</body>

<%- include('partials/footer') %>
