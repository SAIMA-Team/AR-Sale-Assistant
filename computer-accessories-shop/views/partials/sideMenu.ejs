  </ul>  
</aside>

<script>
  let isMenuExpanded = false;

  function toggleMenu() {
    const sideMenu = document.getElementById('sideMenu');
    const menuList = document.getElementById('menuList');
    const mainContent = document.getElementById('mainContent');

    isMenuExpanded = !isMenuExpanded;

    if (isMenuExpanded) {
      sideMenu.style.width = '200px'; // Expand the menu
      menuList.style.display = 'block'; // Show the menu list
      if (mainContent) mainContent.style.marginLeft = '200px'; // Adjust main content margin if exists
    } else {
      sideMenu.style.width = '60px'; // Collapse the menu
      menuList.style.display = 'none'; // Hide the menu list
      if (mainContent) mainContent.style.marginLeft = '60px'; // Adjust main content margin if exists
    }
  }

  window.addEventListener('resize', function() {
    const width = window.innerWidth;
    const hamburger = document.getElementById('hamburger');
    const menuList = document.getElementById('menuList');

    if (width < 768) { // Adjust this breakpoint as needed
      hamburger.style.display = 'block';
      menuList.style.display = isMenuExpanded ? 'block' : 'none'; // Show menu based on state
    } else {
      hamburger.style.display = 'none';
      menuList.style.display = 'block'; // Show menu on larger screens
      sideMenu.style.width = '200px'; // Ensure full width on larger screens
      if (mainContent) mainContent.style.marginLeft = '200px'; // Full margin for expanded menu
    }
  });

  // Initial call to set up the menu on page load
  window.dispatchEvent(new Event('resize'));

  document.getElementById('hamburger').addEventListener('click', toggleMenu);
</script>

<style>
  /* Style menu items */
  .menu-item {
    margin-bottom: 5px;
